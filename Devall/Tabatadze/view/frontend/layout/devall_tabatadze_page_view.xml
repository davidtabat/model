                    <argument name="view_model" xsi:type="object">Devall\Tabatadze\ViewModel\StringViewModel</argument>
                    <argument name="custom_message" xsi:type="string">data passed from block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
