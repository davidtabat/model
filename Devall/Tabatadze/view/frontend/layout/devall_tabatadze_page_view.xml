    <body>
        <referenceBlock name="catalog.compare.sidebar" template="Devall_Tabatadze::sidebar.phtml"/>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template"
                   name="devall.first.layout.example"
                   template="Devall_Tabatadze::example.phtml" >
